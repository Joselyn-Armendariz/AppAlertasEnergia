@model AppAlertasEnergia.Models.Usuario

@{
    ViewData["Title"] = "Inicio de Sesión";    
}
<div class="card">
    <div class="card-header">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="card-body">
        <form asp-action="Menu" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 row">
                <label asp-for="email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input asp-for="email" class="form-control"/>
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Contraseña:</label>
                <div class="col-sm-10">
                    <input asp-for="clave"  type="password" class="form-control" id="inputPassword">
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <input id="btnLogIn" type="submit" class="btn btn-primary mb-3" value="Iniciar Sesion" />
                </div>
            </div>
        </form>
        @if(ViewBag.ErrorMessage != null){
            <p style="color:red;">@ViewBag.ErrorMessage</p>
        }
    </div>
</div>

